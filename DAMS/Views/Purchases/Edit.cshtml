@model DAMS.Models.Purchase

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Purchase</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-route-User_ID="@ViewBag.Data.User_ID" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Purchase_ID" />
            <div class="form-group" hidden>
                <label asp-for="Selling_ID" class="control-label"></label>
                <input asp-for="Selling_ID" class="form-control" />
                <span asp-validation-for="Selling_ID" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="Patient_ID" class="control-label"></label>
                <input asp-for="Patient_ID" class="form-control" />
                <span asp-validation-for="Patient_ID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Requested_Quantity" class="control-label"></label>
                <input asp-for="Requested_Quantity" class="form-control" />
                <span asp-validation-for="Requested_Quantity" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="Request_Status" class="control-label"></label>
                <input asp-for="Request_Status" value="@ViewBag.Status" class="form-control" />
                <span asp-validation-for="Request_Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Delivery_Date" class="control-label"></label>
                <input asp-for="Delivery_Date" class="form-control" />
                <span asp-validation-for="Delivery_Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Delivery_Time" class="control-label"></label>
                <input asp-for="Delivery_Time" class="form-control" />
                <span asp-validation-for="Delivery_Time" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" id="Auto" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<script>
    window.onload = function () {
        document.getElementById("Auto").click();
    };
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
