@model DAMS.Models.Purchase

@{
    ViewData["Title"] = "Delete";
}

<h3>Are you sure you want to cancel this order?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.Raw("Patient Name")
        </dt>
        <dd class = "col-sm-10">
            @ViewBag.Seller.First_Name @ViewBag.Seller.Last_Name
        </dd>
        <dt class="col-sm-2">
            @Html.Raw("Seller Name")
        </dt>
        <dd class = "col-sm-10">
            @ViewBag.Data.First_Name @ViewBag.Data.Last_Name
        </dd>
        <dt class="col-sm-2">
            @Html.Raw("Medicine Name")
        </dt>
        <dd class="col-sm-10">
            @ViewBag.Medicine.Medicine_Name
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Requested_Quantity)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Requested_Quantity)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Delivery_Date)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Delivery_Date)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Delivery_Time)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Delivery_Time)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Purchase_ID" />
        <input type="submit" value="Cancel Order" class="btn btn-danger" />
    </form>
</div>
