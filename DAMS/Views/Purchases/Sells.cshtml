@if (ViewBag.Sells != null)
{
    foreach (var Sell in ViewBag.Sells)
    {
        <div class="display border border-radius width-1 Gap-Bottom" style="overflow: hidden">
            <pre>
            <h3 class="Gap-Left-4 Gap-Top-1"><b>Medicine Details</b></h3>
                <span class="font-size"><b>@Html.Raw("Medicine:")</b> @Html.Raw(Sell.Medicine_ID)</span>
                <span class="font-size"><b>@Html.Raw("Seller:")</b> @Html.Raw(Sell.Seller_ID)</span>
                <span class="font-size"><b>@Html.Raw("Quantity:")</b> @Html.Raw(Sell.Quantity)</span>
                <span class="font-size"><b>@Html.Raw("Price:")</b> @Html.Raw(Sell.Medicine_Price)</span>
            </pre>
            @using (Html.BeginForm("Get_Purchase_ID", "Purchases", FormMethod.Post))
            {
                <input type="hidden" name="User_ID" value="@ViewBag.Data.User_ID" />
                <input type="hidden" name="Selling_ID" value="@Sell.Selling_ID" />
                <input type="submit" value="Select" class="btn btn-primary Gap-Top-2 Gap-Left-5" />
            }
        </div>
    }
}
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}