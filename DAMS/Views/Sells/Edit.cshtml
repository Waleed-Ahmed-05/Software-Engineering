@model DAMS.Models.Sell

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Sell</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Selling_ID" />
            <div class="form-group" hidden>
                <label asp-for="Medicine_ID" class="control-label"></label>
                <input asp-for="Medicine_ID" class="form-control" />
                <span asp-validation-for="Medicine_ID" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="Seller_ID" class="control-label"></label>
                <input asp-for="Seller_ID" class="form-control" />
                <span asp-validation-for="Seller_ID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Medicine_Price" class="control-label"></label>
                <input asp-for="Medicine_Price" class="form-control" />
                <span asp-validation-for="Medicine_Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
