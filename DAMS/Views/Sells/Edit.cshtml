@model DAMS.Models.Sell

@{
    ViewData["Title"] = "Edit";
}

<h2>You can edit your selling medicine's price and quantity here.</h2>

<hr />
<div class="row">
    <div>
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Selling_ID" />
            <div class="form-group" hidden>
                <label asp-for="Medicine_ID" class="control-label"></label>
                <input asp-for="Medicine_ID" class="form-control" />
                <span asp-validation-for="Medicine_ID" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="Seller_ID" class="control-label"></label>
                <input asp-for="Seller_ID" class="form-control" />
                <span asp-validation-for="Seller_ID" class="text-danger"></span>
            </div>
            <div class="form-group display Gap-Bottom">
                <label asp-for="Quantity" class="control-label Gap-2 Gap-Top"><b>Quantity</b></label>
                <input asp-for="Quantity" class="form-control width Gap" />
                <label asp-for="Medicine_Price" class="control-label Gap-2 Gap-Top"><b>Medicine Price</b></label>
                <input asp-for="Medicine_Price" class="form-control width" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
