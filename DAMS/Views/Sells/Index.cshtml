@model IEnumerable<DAMS.Models.Sell>

@{
    ViewData["Title"] = "Index";
}

<h2>You are currently viewing the medicines that you are selling.</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Medicine_Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
    if (ViewBag.Data.User_ID == item.Seller_ID)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Medicine_Price)Pkr
            </td>
            <td>
                <a class="btn btn-success" asp-action="Edit" asp-route-User_ID="@ViewBag.Data.User_ID" asp-route-id="@item.Selling_ID">Edit</a>
                <a class="btn btn-danger" asp-action="Delete" asp-route-User_ID="@ViewBag.Data.User_ID" asp-route-id="@item.Selling_ID">Remove</a>
            </td>
        </tr>
    }
}
    </tbody>
</table>
