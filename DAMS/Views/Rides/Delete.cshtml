@model DAMS.Models.Ride

@{
    ViewData["Title"] = "Delete";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg==" crossorigin="anonymous" referrerpolicy="no-referrer" />

<h3><a href="javascript:void(0);" onclick="window.history.back();"><i class="fa-solid fa-arrow-left" style="color: #020203;"></i></a> Are you sure you want to cancel this ride?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.Raw("Patient's name:")
        </dt>
        <dd class = "col-sm-10">
            @ViewBag.Data.First_Name @ViewBag.Data.Last_Name
        </dd>
        <dt class="col-sm-2">
            @Html.Raw("Driver's name:")
        </dt>
        <dd class = "col-sm-10">
            @ViewBag.Driver.First_Name @ViewBag.Driver.Last_Name
        </dd>
        <dt class="col-sm-2">
            @Html.Raw("Pickup Location:")
        </dt>
        <dd class = "col-sm-10">
            @ViewBag.Ride.Pickup_Location
        </dd>
        <dt class="col-sm-2">
            @Html.Raw("Drop-off Loaction:")
        </dt>
        <dd class="col-sm-10">
            @ViewBag.Ride.Dropoff_Location
        </dd>
        <dt class="col-sm-2">
            @Html.Raw("Date:")
        </dt>
        <dd class="col-sm-10">
            @ViewBag.Ride.Pickup_Date
        </dd>
        <dt class="col-sm-2">
            @Html.Raw("Time:")
        </dt>
        <dd class="col-sm-10">
            @ViewBag.Ride.Pickup_Time
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Ride_ID" />
        <input type="submit" value="Cancel Ride" class="btn btn-danger" />
    </form>
</div>
