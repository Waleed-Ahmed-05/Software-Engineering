@model DAMS.Models.Driver

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Driver</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Drivers" asp-route-id="@ViewBag.Data_01.Driver_ID" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Driver_ID" />
            <div class="form-group" hidden>
                <label asp-for="User_ID" class="control-label"></label>
                <input asp-for="User_ID" class="form-control" />
                <span asp-validation-for="User_ID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Vehicle_Category" class="control-label"></label>
                <input asp-for="Vehicle_Category" class="form-control" />
                <span asp-validation-for="Vehicle_Category" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Vehicle_Name" class="control-label"></label>
                <input asp-for="Vehicle_Name" class="form-control" />
                <span asp-validation-for="Vehicle_Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Number_Plate" class="control-label"></label>
                <input asp-for="Number_Plate" class="form-control" />
                <span asp-validation-for="Number_Plate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rating" class="control-label"></label>
                <input asp-for="Rating" class="form-control" />
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
