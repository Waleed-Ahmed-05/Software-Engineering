@model DAMS.Models.Medicine_Model_.Medicine

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Medicine</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-route-User_ID="@ViewBag.Data.User_ID" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Medicine_Name" class="control-label"></label>
                <input asp-for="Medicine_Name" class="form-control" />
                <span asp-validation-for="Medicine_Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Medicine_Description" class="control-label"></label>
                <input asp-for="Medicine_Description" class="form-control" />
                <span asp-validation-for="Medicine_Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category" class="control-label"></label>
                <input asp-for="Category" class="form-control" />
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Weightage_ID" class="control-label"></label>
                <input asp-for="Weightage_ID" value="@ViewBag.Weightage_ID" class="form-control" />
                <span asp-validation-for="Weightage_ID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price_ID" class="control-label"></label>
                <input asp-for="Price_ID" value="@ViewBag.Price_ID" class="form-control" />
                <span asp-validation-for="Price_ID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" id="Auto" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<script>
    window.onload = function () {
        document.getElementById("Auto").click();
    };
</script>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
