@model DAMS.Models.Doctor

@{
    ViewData["Title"] = "Create";
}


<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

<div>
    <div>
        <h1>Please provide all the requested details</h1>
        <hr />
        <form asp-controller="Doctors" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" hidden>
                <input asp-for="User_ID" class="form-control" />
            </div>
            <div class="form-group display Gap-Bottom">
                <input asp-for="Clinic_Name" class="form-control Gap width" placeholder="Clinic Name"/>
                <input asp-for="Location" class="form-control width" placeholder="Enter you current location"/>
            </div>
            <div class="form-group display Gap-Bottom">
                <input asp-for="Certification" class="form-control width Gap" placeholder="Provide Your Certification"/>
                <input asp-for="Study_Field" class="form-control width" placeholder="Enter Your Field of Study"/>
            </div>
            <h2>Enter Your Availability Details</h2>
            <hr>
            <div class="form-group">
                <select asp-for="Availability" class="form-control width Gap-Bottom">
                    <option value="">Select Your Availability</option>
                    <option value="Offline">Offline</option>
                    <option value="Online">Online</option>
                    <option value="Offline & Online">Both</option>
                </select>
            </div>
            <h3>Offline Availability Timings</h3>
            <hr>
            <div class="form-group display" >
                <label class="Gap-2 Gap-Top">Start</label>
                <input type="time" asp-for="Offline_Duration_Start" class="form-control width Gap" />
                <label class="Gap-2 Gap-Top">End</label>
                <input type="time" asp-for="Offline_Duration_End" class="form-control width Gap" />
            </div>
            <br>
            <h3>Online Availability Timings</h3>
            <hr>
            <div class="form-group display Gap-Bottom">
                <label class="Gap-2 Gap-Top">Start</label>
                <input type="time" asp-for="Online_Duration_Start" class="form-control width Gap" />
                <label class="Gap-2 Gap-Top">End</label>
                <input type="time" asp-for="Online_Duration_End" class="form-control width Gap" />
            </div>
            <div class="form-group Gap-Left-2">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
