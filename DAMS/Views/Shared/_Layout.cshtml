                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <h4 class="nav-link text-dark" asp-area="" asp-controller="" asp-action="">DAMS</h4>
                            </li>
                        </ul>
                        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                            <ul class="navbar-nav flex-grow-1 justify-content-end">
                                <li class="nav-item">
                                    <a class="nav-link text-dark btn btn-primary" asp-area="" asp-controller="Users" asp-action="Login">Login</a>
                                </li>
                                <li class="nav-item" style="margin-left:5px;">
                                    <a class="nav-link text-dark btn btn-danger" asp-area="" asp-controller="Users" asp-action="Signup">Signup</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </nav>
        </header>
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

        <footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2024 - DAMS - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
